---
import Section from "../Section.astro"
import { education } from "cv.json"
---


<Section title="EducaciÃ³n">
    <ul>
      {
        education.map(({ institution, startDate, endDate, area }) => {

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{institution} </h3>
                  </div>
                  
                  <div class="date-container">
                    <time datetime={startDate} data-title={startDate}>
                    {startDate} {" - "}
                    </time>
                    
                    <time datetime={endDate !== "Actual" ? endDate : new Date().toISOString().split('T')[0]} data-title={endDate}>
                    {endDate !== "Actual" ? endDate : "Actual"}
                    </time>
                </div>
                </header>
  
                <footer>
                  <p>{area}</p>
                </footer>
              </article>
            </li>
          )
        })
      }
    </ul>
  </Section>

  <style>
    ul {
      display: flex;
      flex-direction: column;
      gap: 32px;
    }
  
    article h3 {
      font-weight: 500;
      color: #111;
    }
  
    header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
    }
  
    time {
      color: #555;
      font-size: 0.85rem;
      min-width: 102px;
    }
  
    @media (width <= 700px) {
      time {
        text-align: right;
      }
    }
  </style>